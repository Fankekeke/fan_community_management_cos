<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cc.mrbird.febs.cos.dao.OfflineEventsMapper">

    <select id="queryPage" resultType="java.util.LinkedHashMap">
        SELECT
        *
        FROM
        offline_events
        WHERE
        1 = 1
        <if test="queryParam.title != null and queryParam.title != ''">
            AND title LIKE CONCAT('%',#{queryParam.title},'%')
        </if>
        <if test="queryParam.location != null and queryParam.location != ''">
            AND location LIKE CONCAT('%',#{queryParam.location},'%')
        </if>
        ORDER BY created_at DESC
    </select>
</mapper>
